<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:padding="10dp"
            >


    <TextView
        android:id="@+id/dateOfGettingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Date 13, 2018"
        />

    <TextView
        android:id="@+id/cityOfHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Minsk"/>

    <TextView
        android:id="@+id/latDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="12312312"/>

    <TextView
        android:id="@+id/lonqDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="213123"/>


    <TextView
        android:id="@+id/dateHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Date 13, 2018"/>

    <TextView
        android:id="@+id/descriptionHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Fuсking freeze!"/>


    <!--   Wind speed - to show tornado and so on-->
    <TextView
        android:id="@+id/windHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Wind speed: 15 "/>


    <TextView
        android:id="@+id/dayTemperatureHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="-9º"/>

    <TextView
        android:id="@+id/nightTemperatureHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="-15º"/>


</LinearLayout>